<!DOCTYPE html>
<html>
<head>
    <title>List</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <h1>New Job for <%= category %> Tools</h1>
    <form action="/jobs/create" method="post">
        <input type="hidden" name="category" value="<%= category %>">
        <label for="jobName">Job Name:</label>
        <input type="text" id="jobName" name="jobName" required>
        <label for="jobAddress">Job Address:</label>
        <input type="text" id="jobAddress" name="jobAddress" required>
        <button type="submit">Create Job</button>
    </form>

    <h2>Tools for <%= category %></h2>
    <% tools.forEach(function(tool) { %>
        <li>
            <form action="/tools/<%= tool._id %>?_method=PUT" method="post">
                <input type="checkbox" name="checked" onchange="this.form.submit()" <%= tool.checked ? 'checked' : '' %> >
                <%= tool.name %>
                <a href="/tools/<%= category %>/<%= tool._id %>/edit">Edit</a>
                <button formaction="/tools/<%= category %>/<%= tool._id %>?_method=DELETE" formmethod="post">Delete</button>
            </form>
        </li>
    <% }); %>
    </ul>
    <form action="/tools/<%= category %>/new" method="post">
        <input type="text" name="name" placeholder="New Tool Name" required>
        <button type="submit">Add New Tool</button>
    </form>

    <a href="/">Back Home</a>
</body>
</html>