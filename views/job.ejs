<!DOCTYPE html>
<html lang="en">
<head>
    <title>Job name</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <h1>Job name: <%= job.name %></h1>
    <p>Address: <%= job.address %></p>
    <p>Start Date: <%= job.startDate ? new Date(job.startDate).toDateString() : 'N/A' %></p>
    <p>Finish Date: <%= job.finishDate ? new Date(job.finishDate).toDateString() : 'N/A' %></p>
    <h2>Tools List</h2>
    <form action="/jobs/update-finish-date/<%= job._id %>" method="POST">
        <label for="newFinishDate">New Finish Date:</label>
        <input type="date" id="newFinishDate" name="newFinishDate" value="<%= job.finishDate ? job.finishDate.toISOString().split('T')[0] : '' %>">
        <button type="submit">Update Finish Date</button>
    </form>
<ul>
    <% tools.forEach(function(tool) { %>
        <li><%= tool.name %></li>
    <% }); %>
</ul>
<form action="/jobs/<%= job._id %>?_method=DELETE" method="post">
    <button type="submit">Delete Job</button>
</form>
    <a href="/jobs">Back to Jobs List</a>
</html>